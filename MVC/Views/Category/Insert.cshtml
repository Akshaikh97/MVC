@model MVC.Models.Category

<h1>Create Category</h1>

@using (Html.BeginForm("Insert","Category"))
{
    @* @Html.AntiForgeryToken() *@
    <div class="form-group">
        @Html.LabelFor(x=>x.CategoryName)
        @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control"})
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
    </div>
    @Html.HiddenFor(x=>x.Id)
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/Category/Index" class="btn btn-danger">Back</a>
}